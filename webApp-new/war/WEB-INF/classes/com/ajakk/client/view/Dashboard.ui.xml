<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">

 <ui:style>
 @external side-nav, active;
 .side-nav li.active a {
 	color: #2196f3 !important;
 }
 
 .side-nav li.active {
 	background: #fff !important;
 }
 
 body {
 	overflow: auto !important;
 }
 
 .center-horizontal {
 	margin: auto;
 	width: 100%;
 	display: flex;
 	align-items: center;
 	justify-content: center;
    margin-top: 10px;	
 }
 
 input[type="text"] {
 	background: white;
 	border: 1px solid #e9e9e9;
 	border-radius: 3px;
 	color: black;
 	font-size: 1.5rem;
 	height: 2rem;
 }
 
 .padding-filter {
    padding-top: 5px !important;
}

 .padding-txtbox {
    margin-left: 15px !important;
    margin-right: 15px !important;

}
 </ui:style>
 <m:MaterialPanel>
  <!-- Splash screen -->
  <m:MaterialSplashScreen ui:field="splash" backgroundColor="WHITE" depth="1000" textAlign="CENTER">
   <m:MaterialImage width="120px"
    url="http://assets.materialup.com/uploads/b8f2348a-dfa8-4c0a-b696-112e1c293b95/googleplus-logos-02.png" />
   <m:MaterialLabel text="Pattern #1" fontSize="2em" fontWeight="LIGHTER" />
   <m:MaterialLabel text="GPlus Pattern for Social Network" />
  </m:MaterialSplashScreen>
  <!-- Header -->
  <m:MaterialHeader layoutPosition="FIXED" width="100%" shadow="1" depth="996">
   <!-- NavBar -->
   <m:MaterialNavBar backgroundColor="RED_DARKEN_1" activates="sidenav">
    <m:MaterialNavBrand text="Ajakk" />
    <m:MaterialNavSection float="RIGHT">
     <m:MaterialLink iconType="APPS" />
     <m:MaterialLink iconType="NOTIFICATIONS" />
     <m:MaterialImage circle="true" width="40px" height="40px" marginTop="12" marginRight="12" url="" backgroundColor="WHITE" />
    </m:MaterialNavSection>
   </m:MaterialNavBar>
   <!-- Tab -->
  </m:MaterialHeader>

  <!-- SideNav -->
  <m:MaterialSideNav m:id="sidenav" width="250" overflow="AUTO" alwaysShowActivator="true" showOnAttach="false" type="FIXED"
   shadow="0" backgroundColor="WHITE" top="120">
   <m:MaterialLink text="Home" iconType="HOME" textColor="GREY_DARKEN_2" />
   <m:MaterialLink ui:field="profile" text="Profile" iconType="ACCOUNT_CIRCLE" textColor="GREY_DARKEN_2" />
   <m:MaterialLink text="Settings" iconType="COLLECTIONS" textColor="GREY_DARKEN_2" />
   <m:MaterialLink text="Send Feedback" iconType="ANNOUNCEMENT" textColor="GREY_DARKEN_2" />
   <m:MaterialLink text="Help" iconType="HELP" textColor="GREY_DARKEN_2" />
  </m:MaterialSideNav>

  <!-- Container -->
  <m:MaterialContainer paddingLeft="180" paddingRight="180" paddingTop="100">

   <m:MaterialContainer width="100%" >

    <m:MaterialLabel addStyleNames=" {style.center-horizontal}" text="Search for activities" fontSize="1.5em" textColor="GREY" />
    <m:MaterialRow width="70%" addStyleNames="{style.center-horizontal}" backgroundColor="TEAL_LIGHTEN_1">
     
     <m:MaterialColumn grid="l3 m3 s12">
       <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
        <m:MaterialImage url="images/map-location.png" height="150px" width="150px"/>
       </m:MaterialCardImage>
       <m:MaterialCardContent textColor="WHITE"  addStyleNames="{style.padding-filter}" >
        <m:MaterialLabel fontSize="1.15em" text="Filter by location" />
        <g:TextBox text="KL" >
        </g:TextBox>
       </m:MaterialCardContent>
     </m:MaterialColumn>

     <m:MaterialColumn grid="l3 m3 s12">
       <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
        <m:MaterialImage url="images/calendar.png" height="150px" width="150px"/>
       </m:MaterialCardImage>
       <m:MaterialCardContent textColor="WHITE"  addStyleNames="{style.padding-filter}" >
        <m:MaterialLabel fontSize="1.15em" text="Filter by date" />
        <g:TextBox text="After 30/12/2016">
        </g:TextBox>
       </m:MaterialCardContent>
     </m:MaterialColumn>

     <m:MaterialColumn grid="l3 m3 s12">
       <m:MaterialCardImage addStyleNames=" {style.center-horizontal}" >
        <m:MaterialImage url="images/stopwatch.png" height="150px" width="150px"/>
       </m:MaterialCardImage>
       <m:MaterialCardContent textColor="WHITE"  addStyleNames="{style.padding-filter}" >
        <m:MaterialLabel fontSize="1.15em" text="Filter by time" />
        <g:TextBox text="After 4PM">
        </g:TextBox>
       </m:MaterialCardContent>
     </m:MaterialColumn>
    </m:MaterialRow>

    <m:MaterialRow width="100%" addStyleNames=" {style.center-horizontal}">
     <m:MaterialButton  margin="5" backgroundColor="RED"  text="RELOAD ACTIVITIES" waves="DEFAULT" tooltip="Refresh activities list" tooltipPosition="LEFT" iconType="AUTORENEW"> </m:MaterialButton>
     <m:MaterialButton  margin="5" iconPosition="RIGHT" backgroundColor="RED"  text="CLEAR FILTER" waves="DEFAULT" tooltip="Clear filters" tooltipPosition="RIGHT" iconType="AUTORENEW"> </m:MaterialButton>
    
    </m:MaterialRow> 
   </m:MaterialContainer>

   <!-- Activities Card -->
   <m:MaterialLabel addStyleNames=" {style.center-horizontal}" text="Upcoming activities" fontSize="1.5em" textColor="GREY" />
   <ma:masonry.MaterialMasonry>
   <m:MaterialContainer ui:field="cardContainer">
   
   </m:MaterialContainer>
   </ma:masonry.MaterialMasonry>
  </m:MaterialContainer>

  <!-- FAB -->
  <m:MaterialFAB ui:field="btnCreateActivity">
   <m:MaterialAnchorButton
    waves="DEFAULT" type="FLOATING" tooltip="Create activity" tooltipPosition="LEFT" iconType="ADD" backgroundColor="BLUE" size="LARGE" />
  </m:MaterialFAB>
 </m:MaterialPanel>
</ui:UiBinder>