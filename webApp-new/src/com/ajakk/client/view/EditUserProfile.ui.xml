

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">
 <ui:style>
 .modal {
 	
 }
 
 .modalcont {
 	
 }
 
 .editBtn {
 	
 }

 .noborder {
  border: none ;
 }
 </ui:style>

 <m:MaterialModal type="FIXED_FOOTER" ui:field="modal" addStyleNames="{style.modal}" backgroundColor="TRANSPARENT">
  <m:MaterialModalContent addStyleNames="{style.modalcont}">
   <m:MaterialRow>
    <m:MaterialLabel text="Profile Picture" fontSize="0.7em" />
    <m:MaterialImage ui:field="userProfilePic" url="images/profile.jpg" type="CIRCLE" />
   </m:MaterialRow>
   <m:MaterialRow>
  <m:MaterialTextBox ui:field="name" label="Enter Name" addStyleNames="{style.noborder}" grid="s6"/>
  <m:MaterialTextBox ui:field="location" label="Enter Location" addStyleNames="{style.noborder}" grid="s6"/>
  <m:MaterialTextBox ui:field="email" label="Enter Email" addStyleNames="{style.noborder}" grid="s6"/>
  <m:MaterialTextBox ui:field="phoneNo" label="Enter Phone No." addStyleNames="{style.noborder}" grid="s6"/>
  <m:MaterialTextBox ui:field="activities" label="Select Activities" addStyleNames="{style.noborder}" grid="s6"/>
  <m:MaterialTextArea ui:field="aboutMe" label="Tell us something about yourself" addStyleNames="{style.noborder}"  grid="s6"/>
</m:MaterialRow>
   <m:MaterialRow>
    <m:MaterialButton addStyleNames="{style.editBtn}" ui:field="saveBtn" backgroundColor="BLUE" text="Save Profile" waves="LIGHT"
     textColor="WHITE" iconType="SAVE" iconPosition="LEFT" />
   </m:MaterialRow>
  </m:MaterialModalContent>
 </m:MaterialModal>

</ui:UiBinder> 