

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">
  <ui:style>
	.modal {
		display: inline-block;
		text-align: center;
		font-size: 150%;
		box-shadow: none;
		height: 180px;
	}
	
	.detailRows1 {
		height: 80%;
}

.detailRows2 {
		height: 80%;
}

.firstcolumn {
	border-right: solid;
}
	

 </ui:style>

<m:MaterialModal type="FIXED_FOOTER" ui:field="modal" addStyleNames="{style.modal}" backgroundColor="TRANSPARENT">
	<m:MaterialModalContent>
		<m:MaterialRow>
			<m:MaterialColumn grid="s4" addStyleNames="{style.firstcolumn}" >
				<m:MaterialImage url="images/profile.png" type="CIRCLE" />
				<m:MaterialLabel fontSize="1em" text="Rafsyam" />
			</m:MaterialColumn>
			<m:MaterialColumn grid="s8">
				<m:MaterialRow addStyleNames="{style.detailRows1}">
					<m:MaterialLabel fontSize="1em" text="Basketballer"></m:MaterialLabel>
					<m:MaterialLabel fontSize="1em" text="Cyberjaya"></m:MaterialLabel>
				</m:MaterialRow>
				<m:MaterialRow addStyleNames="{style.detailRows2}">
					
					<m:MaterialLabel fontSize="0.5em" text="Joined since 2018"></m:MaterialLabel>
				</m:MaterialRow>
				
			</m:MaterialColumn>
		</m:MaterialRow>
	 </m:MaterialModalContent>
	 <m:MaterialModalFooter>
	 	<m:MaterialLink iconSize="SMALL" iconType="EDIT" iconPosition="RIGHT" />
	 </m:MaterialModalFooter>
</m:MaterialModal>
 
</ui:UiBinder> 