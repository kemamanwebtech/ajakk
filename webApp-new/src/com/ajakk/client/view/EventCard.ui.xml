<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">
 <ui:style>
 @external side-nav, active;
 .side-nav li.active a {
 	color: #2196f3 !important;
 }
 
 .side-nav li.active {
 	background: #fff !important;
 }
 
 body {
 	
 }
 
 .center-horizontal {
 	margin: auto;
 	width: 100%;
 	display: flex;
 	align-items: center;
 	justify-content: center;
 	margin-top: 10px;
 }
 
 input[type="text"] {
 	background: white;
 	border: 1px solid #e9e9e9;
 	border-radius: 3px;
 	color: black;
 	font-size: 1.5rem;
 	height: 2rem;
 }
 
 .padding-filter {
 	padding-top: 5px !important;
 }
 
 .padding-txtbox {
 	margin-left: 15px !important;
 	margin-right: 15px !important;
 }
 
 .card-padding {
 	magin-left: 10px;
 	margin-right: 10px;
 	margin-top: 10px;
 	margin-bottom: 30px;
 	padding-bottom : 30px;
 }
 
 .card-content {
    display: inline block !important;
    align-items: center;
    justify-content: center;
    margin-top: 5px;
 }
 
 </ui:style>
 <m:MaterialCard addStyleNames="{style.card-padding}" grid="s4" width="23%" height="300px">
  <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
   <m:MaterialImage ui:field="image" url="images/futsal.png" height="150px" width="150px" />
  </m:MaterialCardImage>
  <m:MaterialRow height="auto" backgroundColor="TEAL_LIGHTEN_1">
   <m:MaterialCardContent textColor="WHITE" addStyleNames="{style.card-content}">
    <m:MaterialLabel ui:field="lblDate" fontSize="1.15em" text="May 27" />
    <m:MaterialLabel ui:field="lblDay" fontSize="1.7em" text="9 PM" />
    <m:MaterialLabel ui:field="lblLocation" fontSize="2.15em" text="Setapak" />
    <m:MaterialButton ui:field="btnActivityInfo" type="FLOATING" backgroundColor="BLUE" iconType="POLYMER" size="LARGE"
     waves="RED" />
   </m:MaterialCardContent>
  </m:MaterialRow>
 </m:MaterialCard>
</ui:UiBinder> 