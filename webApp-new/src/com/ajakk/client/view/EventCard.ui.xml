<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">
 <ui:style>
 @external side-nav, active;
 .side-nav li.active a {
 	color: #2196f3 !important;
 }
 
 .side-nav li.active {
 	background: #fff !important;
 }
 
 body {
 	overflow: auto !important;
 }
 
 .center-horizontal {
 	margin: auto;
 	width: 100%;
 	display: flex;
 	align-items: center;
 	justify-content: center;
 	margin-top: 10px;
 }
 
 input[type="text"] {
 	background: white;
 	border: 1px solid #e9e9e9;
 	border-radius: 3px;
 	color: black;
 	font-size: 1.5rem;
 	height: 2rem;
 }
 
 .padding-filter {
 	padding-top: 5px !important;
 }
 
 .padding-txtbox {
 	margin-left: 15px !important;
 	margin-right: 15px !important;
 }
 </ui:style>
<m:MaterialCard width="300px" height="300px">
  <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
   <m:MaterialImage url="images/map-location.png" height="150px" width="150px" />
  </m:MaterialCardImage>
<m:MaterialRow width="70%" addStyleNames="{style.center-horizontal}" backgroundColor="TEAL_LIGHTEN_1">
<m:MaterialColumn grid="l3 m3 s12">

  <m:MaterialCardContent textColor="WHITE" addStyleNames="{style.padding-filter}">
   <m:MaterialLabel fontSize="1.15em" text="Filter by location" />
   <g:TextBox text="KL">
   </g:TextBox>
  </m:MaterialCardContent>
</m:MaterialColumn>
</m:MaterialRow>
<m:MaterialFAB ui:field="btnActivityInfo" ></m:MaterialFAB>
 </m:MaterialCard>
</ui:UiBinder> 