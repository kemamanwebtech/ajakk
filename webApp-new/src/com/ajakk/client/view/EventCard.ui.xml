<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">
 <ui:style>
 @external side-nav, active;
 .side-nav li.active a {
 	color: #2196f3 !important;
 }
 
 .side-nav li.active {
 	background: #fff !important;
 }
 
 body {
 	
 }
 
 .center-horizontal {
 	margin: auto;
 	width: 100%;
 	display: flex;
 	align-items: center;
 	justify-content: center;
 	margin-top: 10px;
 }
 
 input[type="text"] {
 	background: white;
 	border: 1px solid #e9e9e9;
 	border-radius: 3px;
 	color: black;
 	font-size: 1.5rem;
 	height: 2rem;
 }
 
 .padding-filter {
 	padding-top: 5px !important;
 }
 
 .padding-txtbox {
 	margin-left: 15px !important;
 	margin-right: 15px !important;
 }
 
 .card-padding {
 	magin-left: 10px;
 	margin-right: 10px;
 	margin-top: 10px;
 	margin-bottom: 10px;
 	padding-bottom: 30px;
 }
 
 .card-content {
 	display: inline block !important;
 	align-items: center;
 	justify-content: center;
 	margin-top: 5px;
 }
 
 .row-padding {
	margin-bottom: 0px !important;
}

 </ui:style>
 <m:MaterialCard addStyleNames="{style.card-padding}" grid="s4" width="23%" height="100%" backgroundColor="GREY_LIGHTEN_1">
  <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
   <m:MaterialImage ui:field="imageCard" url="images/futsal.png" height="150px" width="150px" />
  </m:MaterialCardImage>
  <m:MaterialRow ui:field="cardBg" height="auto" addStyleNames="{style.row-padding}">
   <m:MaterialCardContent textColor="WHITE" addStyleNames="{style.card-content}">

     <m:MaterialLabel ui:field="lblEventName" fontSize="1.3em" text="Main futsal bersama bob" />
     <m:MaterialLabel ui:field="lblEventDesc" fontSize="1.3em" />
    <m:MaterialButton ui:field="btnActivityInfo" text="Details" waves="LIGHT" backgroundColor="RED" textColor="WHITE"
     iconType="MORE_VERT" iconPosition="RIGHT" float="RIGHT" marginBottom="10" />

   </m:MaterialCardContent>
  </m:MaterialRow>
 </m:MaterialCard>
</ui:UiBinder> 