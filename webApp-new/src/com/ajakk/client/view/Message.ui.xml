<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client">
  <ui:style>
   .remove-shadow {
    box-shadow: none !important;
 }
  .vert-align {
    vertical-align: middle !important;
    display: inline-flex !important;
}
 .hori-align {
    horizontal-align: middle !important;
    display: inline-flex !important;
}
 .label {
    font-size: 1.5em !important;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    height: 36px;
    margin-top: 3px;
}
 </ui:style>
 <m:MaterialModal ui:field="modal" type="DEFAULT" inDuration="500" outDuration="500" addStyleNames=" {style.remove-shadow}" 
    grid="s12" height="auto" backgroundColor="TRANSPARENT" textColor="WHITE">
 <m:MaterialModalContent height="auto" backgroundColor="TEAL_LIGHTEN_1" textColor="WHITE">
 <m:MaterialLabel ui:field="topText" fontSize="1.5em" textColor="WHITE" addStyleNames="{style.label}" />
<m:MaterialCardImage addStyleNames=" {style.hori-align}" width="100%">
<m:MaterialImage ui:field="image" height="90px" width="90px"  addStyleNames=" {style.hori-align}" />
 </m:MaterialCardImage>
  <m:MaterialLabel ui:field="btmText" fontSize="1.5em" textColor="WHITE" addStyleNames="{style.label}" />
 </m:MaterialModalContent>
 </m:MaterialModal>
</ui:UiBinder> 