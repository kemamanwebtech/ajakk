<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client"
 xmlns:m.html="urn:import:gwt.material.design.client.ui.html">
 <ui:style>
 .important {
 	font-weight: bold;
 }
 
 .MTA {
 	margin-left: 13px;
 	dispaly: inline-block;
 	text-align: center;
 	width: 100%;
 }
 
 .center-horizontal {
 	margin: auto;
 	width: 100%;
 	display: flex;
 	align-items: center;
 	justify-content: center;
 	margin-top: 10px;
 }
 
 .remove-shadow {
 	box-shadow: none !important;
 }
 </ui:style>

 <m:MaterialModal ui:field="modal" grid="s12" height="auto" backgroundColor="TRANSPARENT" textColor="WHITE" addStyleNames=" {style.remove-shadow}">
  <m:MaterialModalContent height="auto" backgroundColor="TEAL_LIGHTEN_1" textColor="WHITE">
   <m:MaterialTextArea ui:field="title" readOnly="true" grid="s12" text="CREATE NEW ACTIVITY" iconType="ADD" iconSize="LARGE"
    fontSize="1.15em" textColor="WHITE" />

   <m:MaterialRow addStyleNames=" {style.center-horizontal}" textColor="WHITE">

    <m:MaterialColumn grid="s2">
     <m:MaterialCardImage>
      <m:MaterialImage ui:field="imgName" url="images/clipboard.png" height="120px" width="120px" />
     </m:MaterialCardImage>
     <m:MaterialTextBox textColor="WHITE" ui:field="txtName" addStyleNames="{style.MTA}" readOnly="true" label="Description"
      text="Futsal"></m:MaterialTextBox>
    </m:MaterialColumn>

    <m:MaterialColumn grid="s2">
     <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
      <m:MaterialImage ui:field="imgType" url="images/wallet.png" height="120px" width="120px" />
     </m:MaterialCardImage>
 <m:MaterialListBox placeholder="Sports" ui:field="type">  <m.html:Option text="Futsal"/>
 <m.html:Option text="Basketball"/>
 <m.html:Option text="Hiking"/>
 <m.html:Option text="Voluteer"/>
 </m:MaterialListBox>
    </m:MaterialColumn>

    <m:MaterialColumn grid="s2">
     <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
      <m:MaterialImage ui:field="imgDatetime" url="images/stopwatch.png" height="120px" width="120px" />
     </m:MaterialCardImage>
     <m:MaterialDatePicker ui:field="date" autoClose="true" placeholder="Date" />
     <ma:timepicker.MaterialTimePicker ui:field="time" autoClose="true" placeholder="Time" />
    </m:MaterialColumn>

    <m:MaterialColumn grid="s2">
     <m:MaterialCardImage addStyleNames=" {style.center-horizontal}">
      <m:MaterialImage ui:field="imgLoc" url="images/map-location.png" height="120px" width="120px" />
     </m:MaterialCardImage>
     <m:MaterialTextBox textColor="WHITE" ui:field="txtLoc" addStyleNames="{style.MTA}" readOnly="true" label="Location"
      text="Sports Planet"></m:MaterialTextBox>
    </m:MaterialColumn>



   </m:MaterialRow>

   <m:MaterialRow width="100%" addStyleNames=" {style.center-horizontal}">
    <m:MaterialButton margin="5" backgroundColor="RED" text="CANCEL" waves="DEFAULT" tooltip="Join this activity!"
     tooltipPosition="LEFT" iconType="AUTORENEW" ui:field="btnCancel">
    </m:MaterialButton>
    <m:MaterialButton margin="5" iconPosition="RIGHT" backgroundColor="RED" text="SAVE ACTIVITY" waves="DEFAULT" tooltip="Clear filters"
     tooltipPosition="RIGHT" iconType="AUTORENEW" ui:field="btnSave">
    </m:MaterialButton>
   </m:MaterialRow>


  </m:MaterialModalContent>
 </m:MaterialModal>

</ui:UiBinder> 