<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
			xmlns:e="urn:import:org.gwtbootstrap3.extras.card.client.ui">
  <ui:style>
  .card {
  	margin: 20px;
  	display: inline-block;
  }
  
  .btn {
  	margin: auto;
  	padding: 10px;
  }
  </ui:style>
  <g:VerticalPanel styleName="{style.card}" >
  	<b:Well size="LARGE">
  		<b:Row>
    		<b:Image styleName="{style.card}" ui:field="imgEvent" />
    		<b:Label styleName="{style.card}" ui:field="lblEvent" />
    	</b:Row>
    <b:Button type="PRIMARY" styleName="{style.card} {style.btn}" ui:field="btnEventInfo" />
	</b:Well>
  </g:VerticalPanel>
</ui:UiBinder>