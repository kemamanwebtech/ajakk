<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:e="urn:import:org.gwtbootstrap3.extras.card.client.ui">
    <ui:style>
    .margin-auto {
    	margin: auto !important;
    	display: inline-block !important;
    }
    
    .inline-block {
    	display: inline-block !important;
    }
    
    .margin-auto {
    	margin: auto;
    }
    
    .no-border {
    	border: 0px !important;
    }
    
    .no-bg {
    	background: none !important;
    }
    
    .color-card {
	   background: #AAB9D8 !important;
	   background-color: #AAB9D8 !important;
	}
    </ui:style>
    <g:VerticalPanel styleName="container-fluid {style.inline-block} ">
        <e:Card width="200px" height="180px" >
            <e:Front>
                <g:VerticalPanel >
                    <b:Image ui:field="imgEventFront" />
                    <b:Label ui:field="lblEventFront">Desc</b:Label>
                    <b:Button ui:field="btnEventInfoFront" />
                </g:VerticalPanel>
            </e:Front>
            <e:Back>
                <b:Label ui:field="lblEventBack" />
                <b:Button styleName="btn-primary" ui:field="btnEventInfoBack" />
            </e:Back>
        </e:Card>
    </g:VerticalPanel>
</ui:UiBinder>