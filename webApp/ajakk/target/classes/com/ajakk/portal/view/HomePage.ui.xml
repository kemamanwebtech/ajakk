<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
			xmlns:card="urn:import:org.gwtbootstrap3.extras.card.client.ui">
  <ui:style>
  
    .none {
	background: none;
	border: 0px;
	margin: 0 auto;
	}
  
  	
  }
  
  .NavBtn {

	padding-left: 25px;

	}
  	
  .NavBar {
	
	}
	
	.footer {
		text-align: center;
	}
	
	.page {
		text-align: center;
	}

  </ui:style>
  
  <g:HTMLPanel>
  	<b:Navbar addStyleNames="{style.NavBar}" b:id="NavBar" ui:field="NavBar">
  		<b:NavbarHeader>
  			<b:NavbarBrand text="Ajakk"></b:NavbarBrand>
  		</b:NavbarHeader>
  		<b:ButtonGroup pull="RIGHT" addStyleNames="{style.NavBtn}">
  		  <b:NavbarForm pull="LEFT">
  		  	 <b:Button icon="SEARCH" size="LARGE"></b:Button>
     		 <b:TextBox size="LARGE" placeholder="Search" addStyleNames="col-lg-8"/>
    	  </b:NavbarForm>
    	  <b:NavbarForm pull="LEFT">
  		  <b:Button type="PRIMARY" icon="BELL" size="LARGE" ></b:Button>
		  <b:Button dataToggle="DROPDOWN" type="PRIMARY" size="LARGE" icon="ADDRESS_CARD"/>
		  <b:DropDownMenu pull="RIGHT">
		    <b:AnchorListItem>Profile</b:AnchorListItem>
		    <b:AnchorListItem>Settings</b:AnchorListItem>
		    <b:AnchorListItem>Messages</b:AnchorListItem>
		    <b:AnchorListItem>Log Out</b:AnchorListItem>
		  </b:DropDownMenu>
		  </b:NavbarForm>
		</b:ButtonGroup>
  	</b:Navbar>
  	 
 	
  	 <b:Container fluid="true">
        <b:Modal title="Event Info" b:id="modal1" ui:field="modal">
          <b:ModalHeader>
            <g:HTML>
              <h4>Event header</h4>
            </g:HTML>
          </b:ModalHeader>	
          <b:ModalBody>
            <g:HTML>Activity :</g:HTML>
          </b:ModalBody>
          <b:ModalFooter>
            <b:Button type="PRIMARY">Join Event</b:Button>
            <b:Button type="DANGER" dataDismiss="MODAL">Close</b:Button>
          </b:ModalFooter>
        </b:Modal>
        <g:HTMLPanel>
        	<b:ListGroup addStyleNames="{style.none}">
        		<b:ListGroupItem addStyleNames="{style.none}" ui:field="eventContainerPanel">
        		</b:ListGroupItem>
        	</b:ListGroup>
        </g:HTMLPanel>
      </b:Container>
      
     <div class="{style.footer}">
		<b:Container fluid="true">
     		<b:Row>
         		<b:Column size="MD_4">
         			<b:Row><b:Icon type="COGS" size="TIMES5"></b:Icon></b:Row>
         			<b:Label text="How it works"></b:Label>
         		</b:Column>
         		<b:Column size="MD_4">
         			<b:Row><b:Icon type="HOME" size="TIMES5"></b:Icon></b:Row>
         			<b:Label text="About Us"></b:Label>
         		</b:Column>
         		<b:Column size="MD_4">
         			<b:Row><b:Icon type="PLANE" size="TIMES5"></b:Icon></b:Row>
         			<b:Label text="Contact Us"></b:Label>
         		</b:Column>
     		</b:Row>
 		</b:Container>
	</div>
  	
  </g:HTMLPanel>
</ui:UiBinder>