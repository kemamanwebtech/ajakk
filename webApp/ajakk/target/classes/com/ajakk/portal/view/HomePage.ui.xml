<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
			xmlns:card="urn:import:org.gwtbootstrap3.extras.card.client.ui">
  <ui:style>
  
  .none {
	background: none;
	border: 0px;
	margin: 5px;

	}
	
  
  @font-face {
  	font-family: KaushanScript-Regular;
  	src: url('KaushanScript-Regular.ttf') format('ttf'),
  		url('KaushanScript-Regular.ttf') format('truetype');
  }
  
  .title {
  	font-family: 'KaushanScript-Regular', serif;
  	font-size: 55px;
  	color: #FFFFFF;
  	background-color: #334b72 !important;
  }
  
  
  .navItem {
  	margin: 10px 10px 10px 10px;
  }
  
  .eventContainerPanel {
  	margin: auto;
  	width: 50%;
    padding: 10px;
    height: 100% !important;
  }
  
  .center {
  	margin: auto;
  	width: 50%;
  	padding: 10px;
  }
  
  .card {
  	display: inline-block;
  	width: 150px;
  	height: 100px;
  	margin: 10px;
  	border: 3px solid #73AD21;
  }
  
  .page {
  	width: 100%;
  	margin-right: auto;
  	margin-left: auto;
  	padding-left: 0px;
  	padding-right: 0px;
  	height: 100% !important;
  }
  
  .nav {
  	width: 100%;
  	margin-right: auto;
  	margin-left: auto;
  	padding-left: 0px;
  	padding-right: 0px;
  }
  
  .navbar {
  	background-color: #334b72 !important;
  	border: 0;
  	-webkit-box-shadow: none;
  	box-shadow: none;
  }
  
  
  .background-image {
  	background: url('http://wallpaperus.org/wallpapers/03/103/engl-spts-2560x1920-wallpaper-1669831.jpg') no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  
  }
  
  .content {
  	z-index: 2;
  	filter: none;
  	-webkit-filter: none;
  }
  
  
  </ui:style>
  <g:HTMLPanel addStyleNames="{style.page} ">
    <g:HTMLPanel addStyleNames="{style.background-image}">
      <b:Container addStyleNames="{style.nav} ">
        <b:Navbar addStyleNames="{style.navbar}">
          <b:Container addStyleNames="{style.center}">
            <b:NavbarHeader addStyleNames="{style.title}">
              <b:Label ui:field="brand" addStyleNames="{style.navItem} {style.title}">Ajakk</b:Label>
            </b:NavbarHeader>
            <b:NavbarForm pull="RIGHT" addStyleNames="{style.navItem}">
              <b:Button type="DANGER" size="LARGE" addStyleNames="{style.navItem}">Sign Up</b:Button>
              <b:Button type="DANGER" size="LARGE" addStyleNames="{style.navItem}">Sign In</b:Button>
            </b:NavbarForm>
          </b:Container>
        </b:Navbar>
      </b:Container>
      <g:HTMLPanel addStyleNames="{style.page}">
        <b:Modal title="Event Info" b:id="modal1" ui:field="modal">
          <b:ModalHeader>
            <g:HTML>
              <h4>Event header</h4>
            </g:HTML>
          </b:ModalHeader>	
          <b:ModalBody>
            <g:HTML>Activity :</g:HTML>
          </b:ModalBody>
          <b:ModalFooter>
            <b:Button type="PRIMARY">Join Event</b:Button>
            <b:Button type="DANGER" dataDismiss="MODAL">Close</b:Button>
          </b:ModalFooter>
        </b:Modal>
        <g:HTMLPanel>
        	<b:ListGroup addStyleNames="{style.none}">
        		<b:ListGroupItem addStyleNames="{style.none}" ui:field="eventContainerPanel">
        		</b:ListGroupItem>
        	</b:ListGroup>
        </g:HTMLPanel>
      </g:HTMLPanel>
    </g:HTMLPanel>
  </g:HTMLPanel>
  
  
</ui:UiBinder>