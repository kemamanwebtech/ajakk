<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
xmlns:g="urn:import:com.google.gwt.user.client.ui" 
xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
    .none {
    	border: 0px;
    	margin: 0 auto;
    }
    
    .NavBtn {
    	padding-left: 25px;
    }
    
    .footer {
    	text-align: center;
    }
    
    .page {
    	text-align: center;
    }
    
    .All {
    	background: #bdc3c7;
    }
    
    .container-bg {
        background: #0A3873;
    }
    
    .navbar-center {
    	padding-left: 30% !important;
    }
    .no-border {
	   border: 0px !important;
	}
	
   .html .body {
   height: 100% !important;
   width: 100% !important;
   margin: 0 !important;
   padding: 0 !important;
   
   }

    </ui:style>

<!--  addStyleNames="{style.All}"-->
    <g:HTMLPanel addStyleNames=" {style.html}  {style.body} {style.container-bg}"> 
    <!--  {style.container-bg}"> -->

        <nav class="navbar navbar-default"  b:id="NavBar" ui:field="NavBar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Ajakk</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <form class="navbar-form">
                            <input type="text" class="form-control" placeholder="Search" ui:field="txtBoxSearchEvent"></input>
                            <button type="submit" class="btn btn-default" ui:field="btnSearchEvent">Search</button>
                        </form>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <form class="navbar-form navbar-left">
                        
                            <a class="navbar-text" ui:field="txtSignInAs"> </a>
                            <!--  <button class="btn btn-primary" type="button">Messages <span class="badge">4</span></button> -->
                            <i class="fa fa-bell fa-2x" style="color:#00CED1" aria-hidden="true" ui:field="noti" role="button"> <span class="badge">4</span></i>
                        </form>
                        <li class="dropdown">
                            <a class="dropdown-toggle fa fa-bars fa-2x" style="color:#00CED1" aria-hidden="true" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a ui:field="linkProfile"><i class="fa fa-user fa-fw" aria-hidden="true"></i>&nbsp;Profile</a>
                                </li>
                                <li>
                                    <a ui:field="linkSetting"><i class="fa fa-cog fa-fw" aria-hidden="true"></i>&nbsp;Setting</a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a ui:field="linkLogOut"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>&nbsp;Log out</a>
                                </li>
                                <li>
                                    <a ui:field="linkSupport"><i class="fa fa-phone fa-fw" aria-hidden="true"></i>&nbsp;Support</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div> <!-- navbar-collapse -->
            </div> <!-- container fluid -->
        </nav>


        <b:Container addStyleNames="container-fluid">
            <g:HTMLPanel addStyleNames="{style.container-bg}" >
                <b:ListGroup addStyleNames="{style.no-border}">
                    <b:ListGroupItem addStyleNames="container {style.container-bg} {style.no-border}" ui:field="eventContainerPanel">
                    </b:ListGroupItem>
                </b:ListGroup>
            </g:HTMLPanel>
        </b:Container>
        
    </g:HTMLPanel>
</ui:UiBinder>