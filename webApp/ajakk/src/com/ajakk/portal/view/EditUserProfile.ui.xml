<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:u="urn:import:com.google.gwt.uibinder.client">
	<ui:style>
		
		.margin {
			margin: 0 auto !important;
		}

	</ui:style>
	<g:HTMLPanel>
		<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2" style="width:50%; padding-top:30px; ">			<b:Panel ui:field="panel">
				<b:PanelHeader addStyleNames="{style.margin}">
					<b:MediaList>
						<b:ListItem>
							<b:ImageAnchor ui:field="profileImage" asMediaObject="true" pull="LEFT" url="http://quotesabout.us/img/authors/s/author_20626.png"></b:ImageAnchor>
							<b:MediaBody>
								<b:Heading size="H4" text="Najib Razak" ui:field="name"></b:Heading>
							</b:MediaBody>
						</b:ListItem>
					</b:MediaList>
				</b:PanelHeader>
				<b:PanelBody>
					<b:Form type="HORIZONTAL">
						<b:FieldSet>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2" ui:field="userName" >Username:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:FormLabel>njbrzk65</b:FormLabel>
								</g:FlowPanel>
							</b:FormGroup>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2" ui:field="email" >Email:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextBox>njbrzk65@gmail.com</b:TextBox>
								</g:FlowPanel>
							</b:FormGroup>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2" ui:field="phoneNumber" >Phone No.:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextBox>1300-88-2525</b:TextBox>
								</g:FlowPanel>
							</b:FormGroup>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2" ui:field="location" >Location:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextBox>Kuala Lumpur</b:TextBox>
								</g:FlowPanel>
							</b:FormGroup>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2" ui:field="sport" >Sport:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextBox>Basketball </b:TextBox>
								</g:FlowPanel>
							</b:FormGroup>
							<b:InputGroup>
								<b:Row>
									<b:Button type="SUCCESS" ui:field="btnConfirm" text="Confirm" pull="RIGHT"></b:Button>
								</b:Row>
							</b:InputGroup>
						</b:FieldSet>
					</b:Form>
				</b:PanelBody>
			</b:Panel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>