<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:u="urn:import:com.google.gwt.uibinder.client">
	
	<ui:style>
		
		@external col-lg-2;
		.col-lg-2 {
		margin-right: 0 auto;
		margin-left: 0 auto;
	}
	
	.mainContainer {
		margin: 0 auto;
		padding: 20px;
	}
		
	</ui:style>
	<g:HTMLPanel>
		<div addStyleNames="Container-fluid">
			<div addStyleNames="Row">
				
	 				<form class="form-horizontal">
	 					<div class="form-group">
	 						<label class="col-sm-2 control-label">Email:</label>
	 						<div class="col-sm-10">
	 							<input ui:field="email" class="form-control"></input>
	 						</div>
	 					</div>
	 					<div class="form-group">
	 						<label class="col-sm-2 control-label">Name:</label>
	 						<div class="col-sm-10">
	 							<input ui:field="name" class="form-control"></input>
	 						</div>
	 					</div>
	 					<div class="form-group">
	 						<label class="col-sm-2 control-label">Password:</label>
	 						<div class="col-sm-10">
	 							<input type="password" ui:field="password" class="form-control"></input>
	 						</div>
	 					</div>
	 					<div class="form-group">
	 						<label class="col-sm-2 control-label">Location:</label>
	 						<div class="col-sm-10">
	 							<input ui:field="location" class="form-control"></input>
	 						</div>
	 					</div>
	 					<div class="form-group">
	 						<label class="col-sm-2 control-label">Phone Number:</label>
	 						<div class="col-sm-10">
	 							<input type="password" ui:field="phoneNo" class="form-control"></input>
	 						</div>
	 					</div>
	 					
						<div class="form-group">
							<div class="col-offset-2 col-sm-10">
								<g:Button @ui:field="cBtn"></g:Button>
79\
							</div>
						</div>
					</form>
	 				
	 			</div>
			</div>
		
	</g:HTMLPanel>
</ui:UiBinder> 