<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.loginButton {
  		display: block;
  		font-size: 16pt;
	}
	</ui:style>
	
	<g:HTMLPanel>
	
		<g:TextBox ui:field="userName" />
		<g:TextBox ui:field="passwd" />
		<g:Button addStyleNames="{style.loginButton}" ui:field="loginButton" >Login</g:Button>
		<g:Label ui:field="errorLabel" />
		
	</g:HTMLPanel>
	
</ui:UiBinder> 