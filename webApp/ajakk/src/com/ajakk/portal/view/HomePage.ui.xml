<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
xmlns:g="urn:import:com.google.gwt.user.client.ui" 
xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
    .none {
    	border: 0px;
    	margin: 0 auto;
    }
    
    .mgn {
		margin: 0 auto !important;
	}
    
    .NavBtn {
    	padding-left: 25px;
    }
    
    .footer {
    	text-align: center;
    }
    
    .page {
    	text-align: center;
    }
    
    .All {
    	background: #bdc3c7;
    }
    
    .container-bg {
        background: #2b5876;  /* fallback for old browsers */
		background: -webkit-linear-gradient(to right, #4e4376, #2b5876);  /* Chrome 10-25, Safari 5.1-6 */
		background: linear-gradient(to right, #4e4376, #2b5876); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    }
    
    .navbar-center {
    	padding-left: 30% !important;
    }
    .no-border {
	   border: 0px !important;
	}
	
   .html .body {
   height: 100% !important;
   width: 100% !important;
   margin: 0 !important;
   padding: 0 !important;
   
   }
   
   	.center {
			position: absolute !important;
    		top:0 !important;
    		bottom: 0 !important;
    		left: 0 !important;
    		right: 0 !important;
    		margin: auto !important;
		}

    </ui:style>

<!--  addStyleNames="{style.All}"-->
    <g:HTMLPanel addStyleNames=" {style.html}  {style.body} {style.container-bg}"> 
    <!--  {style.container-bg}"> -->

        <nav class="navbar navbar-default"  b:id="NavBar" ui:field="NavBar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Ajakk</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <form class="navbar-form">
                            <input type="text" class="form-control" icon="SEARCH" ui:field="txtBoxSearchEvent"></input>
                            <button type="submit" class="btn btn-default" ui:field="btnSearchEvent">Search</button>
                        </form>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <form class="navbar-form navbar-left">
     						<b:Anchor addStyleNames="fa fa-plus fa-2x" ui:field="btnAddEvent"></b:Anchor>
							
                        	<i class="fa fa-bell fa-2x" style="color:#00CED1" aria-hidden="true" ui:field="noti" role="button"> <span class="badge">4</span></i>
                        </form>
                        <li class="dropdown">
                            <a class="dropdown-toggle fa fa-bars fa-2x" style="color:#00CED1" aria-hidden="true" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <b:Anchor ui:field="linkProfile"><i class="fa fa-user fa-fw" aria-hidden="true"></i>&nbsp;Profile</b:Anchor>
                                </li>
                                <li>
                                    <a ui:field="linkSetting"><i class="fa fa-cog fa-fw" aria-hidden="true"></i>&nbsp;Setting</a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a ui:field="linkLogOut"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>&nbsp;Log out</a>
                                </li>
                                <li>
                                    <a ui:field="linkSupport"><i class="fa fa-phone fa-fw" aria-hidden="true"></i>&nbsp;Support</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div> <!-- navbar-collapse -->
            </div> <!-- container fluid -->
        </nav>


        <b:Container addStyleNames="container-fluid">
        <b:Modal title="Event Info" b:id="modal1" ui:field="modal">
          <b:ModalHeader>
            <g:HTML>
              <h4>Event header</h4>
            </g:HTML>
          </b:ModalHeader>  
          <b:ModalBody>
            <g:HTML>Activity :</g:HTML>
          </b:ModalBody>
          <b:ModalFooter>
            <b:Button type="PRIMARY">Join Event</b:Button>
            <b:Button type="DANGER" dataDismiss="MODAL">Close</b:Button>
          </b:ModalFooter>
        </b:Modal>
            <g:HTMLPanel addStyleNames="{style.container-bg}" >
                <b:ListGroup addStyleNames="{style.no-border}">
                    <b:ListGroupItem addStyleNames="container {style.container-bg} {style.no-border}" ui:field="eventContainerPanel">
                    </b:ListGroupItem>
                </b:ListGroup>
            </g:HTMLPanel>
        </b:Container>
        
    </g:HTMLPanel>
    
   
</ui:UiBinder>