<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:card="urn:import:org.gwtbootstrap3.extras.card.client.ui" >


	<ui:style>
	
	@font-face {
    	font-family: KaushanScript-Regular;
    	src: url('KaushanScript-Regular.ttf') format('ttf'), url('KaushanScript-Regular.ttf')  format('truetype');
	}
	
	.brand {
		font-family: 'KaushanScript-Regular', serif;
  		font-size: 60px;
  		left: 400px;
	}
	
	.navItem {
		margin: 10px 10px 10px 10px;	
	}
	
	.eventListContainer {
		position: relative;
    	left: 20%;
 		border-collapse: collapse;
			
		padding: 5px 10px;
  		vertical-align: center;
  		horizontal-align: center;
  		bottom: 0px;
	}
	
	.page {
 		margin-right: auto;
  		margin-left: auto;
    	background-color: #1f4f96;
    	margin: 0px;
    	top: 0px;
    	left: 0px;
	}	

	.nav {
    	width: 100%;
  		margin-right: auto;
  		margin-left: auto;
  		padding-left: 0px;
  		padding-right: 0px;
	}
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.page}" >
		<b:Container addStyleNames="{style.nav}">
			<b:Navbar >
				<b:NavbarHeader addStyleNames="{style.brand}">
			 		<b:NavbarBrand ui:field="brand" addStyleNames="{style.navItem} {style.brand}" >Ajakk</b:NavbarBrand> 
			 		
			 	</b:NavbarHeader> 
			 	<b:NavbarForm pull="LEFT" addStyleNames="{style.navItem}"> 
			   		<b:Input ui:field="searchBox" type="TEXT" size="LARGE" addStyleNames="{style.navItem} form-control input-sm" />
			  	</b:NavbarForm> 
			 	<b:NavbarForm pull="RIGHT" addStyleNames="{style.navItem}"> 
			   		<b:Button type="DANGER" size="LARGE" addStyleNames="{style.navItem}">Sign Up</b:Button> 
			   		<b:Button type="DANGER" size="LARGE" addStyleNames="{style.navItem}" >Sign In</b:Button> 
			  	</b:NavbarForm> 			  
			</b:Navbar>	
		</b:Container>
		
		<g:HTMLPanel addStyleNames="{style.page}">
			<b:Modal title="Important information" b:id="modal1">
           		<b:ModalHeader>
             		<g:HTML>
                 		<h4>Custom header</h4>
             		</g:HTML>
         		</b:ModalHeader>
         		<b:ModalBody>
             		<g:HTML>Lorem ipsum...</g:HTML>
        		</b:ModalBody>
         		<b:ModalFooter>
             		<b:Button type="PRIMARY">Do something</b:Button>
             		<b:Button type="DANGER" dataDismiss="MODAL">Close</b:Button>
         		</b:ModalFooter>
     		</b:Modal>
     
			<g:HTMLPanel ui:field="eventContainer"  addStyleNames="{style.eventListContainer}" >
           		<card:Card width="200px"  >
  					<card:Front>
  						<g:Label>FRONT</g:Label>
  					</card:Front>
  					<card:Back>
  						<g:Label>BACK</g:Label>
  						<b:Button dataTarget="#modal1" dataToggle="MODAL">Show modal</b:Button>
  					</card:Back>
				</card:Card>
			</g:HTMLPanel >
        </g:HTMLPanel > 
        
    </g:HTMLPanel>    
</ui:UiBinder> 