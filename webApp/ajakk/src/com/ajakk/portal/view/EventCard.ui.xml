<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:e="urn:import:org.gwtbootstrap3.extras.card.client.ui">
    <ui:style>
    .margin-auto {
    	margin: auto !important;
    	display: inline-block !important;
    }
    
    .inline-block {
    	display: inline-block !important;
    }
    
    .margin-auto {
    	margin: auto;
    }
    
    .no-border {
    	border: 0px !important;
    }
    
    .no-bg {
    	background: none !important;
    }
    
	.shadow{
      -webkit-box-shadow: 5px 5px 15px -0px rgba(0,0,0,0.3);
         -moz-box-shadow: 5px 5px 15px -0px rgba(0,0,0,0.3);
              box-shadow: 5px 5px 15px -0px rgba(0,0,0,0.3);
              background-color: white;
}
.transition{
   transition: all .5s cubic-bezier(.3, 0, 0, 1.3)
}

	.imgLabel {
		position: absolute;
    top: 8px;
    left: 16px;
    font-size: 18px;
	}
	
	.wrapper {
	padding: 0;
	margin: 0px 10px 10px 20px;
	}
	
	.org {
		position: absolute;
	top: 50%;
    left: 16px;
    font-size: 18px;
	}
	
	.fieldSet {
		text-align: center;
	}


    </ui:style>
    <b:Container styleName="{style.inline-block} {style.shadow} {style.transition}">
	 	<e:Card ui:field="card" width="280px" height="280px">
	 		<e:Front width="100%" height="100%" >
	 			<b:Image ui:field="imgEventFront" type="THUMBNAIL" height="70%"></b:Image>
	 			<b:Row styleName="{style.wrapper}">
	 				<b:Label styleName="{style.imgLabel}" ui:field="lblEventFront">Basketball</b:Label>
	 				<b:Label styleName="{style.org}" >Rafsyam</b:Label>
	 			</b:Row>
	 			<b:Form>	
	 				<b:FieldSet styleName="{style.fieldSet}">   			
				 			<b:Column size="MD_2">
				 				<b:Icon type="CALENDAR_CHECK_O" size="TIMES3"></b:Icon>
				 				<b:Label>May 20</b:Label>
				 			</b:Column>
				 			<b:Column size="MD_2">
				 				<b:Icon type="MAP_MARKER" size="TIMES3"></b:Icon>
				 				<b:Label>Cyberjaya</b:Label>
				 			</b:Column>
				 			<b:Column size="MD_2">
				 				<b:Icon type="CHECK" size="TIMES3"></b:Icon>
				 				<b:Label>CONFIRM</b:Label>
				 			</b:Column>
			 			                    <b:Button ui:field="btnEventInfoFront" styleName="btn btn-success btn-sm">Join!</b:Button>
			 			
			 		</b:FieldSet>				 		
		 		</b:Form>
	 		</e:Front>
	 <!--  				 			<	<b:Icon type="CALENDAR_CHECK_O" size="TIMES3"></b:Icon> -->
	 	
	 	</e:Card>  
    </b:Container>
    

</ui:UiBinder>