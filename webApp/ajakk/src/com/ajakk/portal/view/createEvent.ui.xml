<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
		.main-container {
		text-align:left !important;
		width: 80%	!important;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<b:Panel>
				<b:PanelBody>
					<b:Form type="HORIZONTAL">
						<b:FieldSet>
							<b:Legend>Create Event</b:Legend>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2">Event Name:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextBox ui:field="eventName" />
								</g:FlowPanel>
							</b:FormGroup>
							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2">Event
									Description:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextArea ui:field="eventDesc" />
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel addStyleNames="col-lg-2">Location:</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<b:TextBox ui:field="eventLocation" />
								</g:FlowPanel>
							</b:FormGroup>
						</b:FieldSet>
						<b:Button ui:field="submitEvent" type="SUCCESS">Submit</b:Button>
					</b:Form>
				</b:PanelBody>
			</b:Panel>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>